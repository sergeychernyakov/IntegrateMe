- model_class = Integration
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:api_key)
      %th= model_class.human_attribute_name(:api_token)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - integrations.each do |integration|
      %tr
        %td= link_to integration.id, integration_path(integration)
        %td= integration.api_key
        %td= integration.api_token
        %td= integration.name
        %td= integration.type
        %td= integration.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_integration_path(integration), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), integration_path(integration), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_integration_path, :class => 'btn btn-primary'
