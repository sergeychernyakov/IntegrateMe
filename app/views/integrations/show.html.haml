- model_class = Integration
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:api_key) + ':'
  %br
  = @integration.api_key
%p
  %strong= model_class.human_attribute_name(:api_token) + ':'
  %br
  = @integration.api_token
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @integration.name
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = @integration.type


= link_to t('.back', :default => t("helpers.links.back")), integrations_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_integration_path(@integration), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), integration_path(@integration), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
